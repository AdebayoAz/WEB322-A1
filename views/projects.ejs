<!DOCTYPE html>
<html lang="en" data-theme="coffee">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mx-auto p-6">
      <!-- Hero -->
      <div class="hero bg-base-200 rounded-lg p-8 mb-6">
        <div class="hero-content">
          <div>
            <h1 class="text-4xl font-bold">Projects</h1>
            <p class="py-3">Browse projects by sector: 
              <a href="/solutions/projects?sector=Land Sinks" class="btn btn-sm btn-outline">Land Sinks</a>
              <a href="/solutions/projects?sector=Industry" class="btn btn-sm btn-outline">Industry</a>
              <a href="/solutions/projects?sector=Transportation" class="btn btn-sm btn-outline">Transportation</a>
              <a href="/solutions/projects?sector=Electricity" class="btn btn-sm btn-outline">Electricity</a>
              <a href="/solutions/projects?sector=Food, Agriculture, and Land Use" class="btn btn-sm btn-outline">Food, Agriculture, and Land Use</a>
            </p>
            <% if (session.user) { %>
            <div class="mt-4">
              <a href="/solutions/addProject" class="btn btn-primary">Add Project</a>
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Projects Table -->
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr>
              <th>Title</th>
              <th>Sector</th>
              <th>Summary</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(function(project) { %>
            <tr>
              <td><%= project.title %></td>
              <td>
                <a href="/solutions/projects?sector=<%= encodeURIComponent(project.Sector.sector_name) %>" class="btn btn-sm btn-outline">
                  <%= project.Sector.sector_name %>
                </a>
              </td>
              <td><%= project.summary_short %></td>
              <td>
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-sm btn-primary">Details</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
</body>
</html>

